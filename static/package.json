{
  "name": "tailwind-test",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "webpack  serve --watch --config webpack/webpack.dev.js",
    "build": "NODE_ENV=production webpack --config webpack/webpack.prod.js",
    "pretty": "prettier --write --config .prettierrc src/**/*.{js,css,html}",
    "lint": "eslint --fix src/",
    "lint:css": "stylelint --fix *.css"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "glob": "^7.1.6",
    "tailwindcss": "^2.0.2",
    "webpack-dev-server": "^3.11.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.0.1",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "mini-css-extract-plugin": "^1.3.3",
    "postcss": "^8.2.2",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^4.1.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "2.2.1",
    "pretty-quick": "^3.1.0",
    "stylelint": "^13.9.0",
    "stylelint-config-standard": "^20.0.0",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1",
    "webpack-merge": "^5.7.3"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "yarn pretty",
      "yarn lint",
      "git add"
    ],
    "*.css": "yarn lint:css"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "pre-push": "yarn build"
    }
  }
}
